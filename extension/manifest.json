{
  "manifest_version": 3,
  "name": "Chat Monitoring",
  "version": "1.0",
  "permissions": [
    "scripting",
    "activeTab"
  ],
  "host_permissions": [
    "http://127.0.0.1:8000/*",
    "https://web.whatsapp.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "http://127.0.0.1:8000/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "https://web.whatsapp.com/*"
      ],
      "js": [
        "contentWhatsapp.js"
      ]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  }
}